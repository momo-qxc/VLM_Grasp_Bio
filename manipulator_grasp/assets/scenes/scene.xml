<mujoco model="scene">

    <include file="../universal_robots_ur5e/ur5e.xml" />
    <include file="../robotiq_2f85/2f85.xml" />

    <compiler angle="radian" autolimits="true" />
	
    <option timestep="0.002" integrator="implicitfast" solver="PGS" gravity="0 0 -9.82"
            cone="elliptic">
		<!--		 <flag multiccd="enable"/>-->
    </option>

	<!-- 利用mujoco软件来调整Visualization->Free Camera->点击Align更新查看，需要在env代码里进行设置，不能自动启用 -->
    <statistic center="1.8 1.1 1.7" extent="0.8" meansize="0.08" />

    <visual>
        <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0" />
        <rgba haze="0.15 0.25 0.35 1" />

		<!-- 利用mujoco软件来调整Visualization->Free Camera->点击Align更新查看，需要在env代码里进行设置，不能自动启用 -->
		<global azimuth="210" elevation="-35" offheight="1280" offwidth="1280"/>
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512"
                 height="3072" />
        <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4"
                 rgb2="0.1 0.2 0.3" markrgb="0.8 0.8 0.8" width="300" height="300" />
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5"
                  reflectance="0.2" />

        <!--meshes-->
        <mesh name ="table" file="../table/sigmund_table.stl" scale= "1 1 1"/>
		<mesh name ="Apple" file="../fruit/Apple.STL" scale= "0.001 0.001 0.001"/>
		<mesh name ="Banana" file="../fruit/Banana.STL" scale= "0.001 0.001 0.001"/>

		<mesh name="hammer_head" file="../hammer/hammer_head.stl"/>
		<mesh name="hammer_neck" file="../hammer/hammer_neck.stl"/>
		<mesh name="hammer_contact0" file="../hammer/contact0.stl"/>
		<mesh name="hammer_contact1" file="../hammer/contact1.stl"/>

		<mesh name="knife_blade" file="../knife/knife_blade.stl"/>
        <mesh name="knife_handle" file="../knife/knife_handle.stl"/>
        <mesh name="knife_contact0" file="../knife/contact0.stl"/>
        <mesh name="knife_contact1" file="../knife/contact1.stl"/>

		<mesh name="duck" file="../duck/duck.stl" scale= "0.8 0.8 0.8"/>
        <mesh name="duck_contact0" file="../duck/contact0.stl" scale= "0.8 0.8 0.8"/>
        <mesh name="duck_contact1" file="../duck/contact1.stl" scale= "0.8 0.8 0.8"/>
        <mesh name="duck_contact2" file="../duck/contact2.stl" scale= "0.8 0.8 0.8"/>

		<!-- <mesh name="flashlight" file="../flashlight/flashlight.stl"/>
		<mesh name="flashlight_contact0" file="../flashlight/contact0.stl"/>
		<mesh name="flashlight_contact1" file="../flashlight/contact1.stl"/> -->

		<texture name="apple_tex" type="2d" file="../fruit/mesh/red-apple.png"/>
		<material name="apple_mat" texture="apple_tex"/>
		<texture name="banana_tex" type="2d" file="../fruit/mesh/yellow-banana.png"/>
		<material name="banana_mat" texture="banana_tex"/>

    	<material name="hammer_head_mat" rgba="0.7 0.7 0.7 1" specular="0.5"/>
		<material name="hammer_neck_mat" rgba="0.73 0.5 0.39 1" specular="0.5"/>

		<material name="knife_blade_mat" rgba="0.75 0.75 0.75 1" specular="0.5"/>
		<material name="knife_handle_mat" rgba="0.1 0.1 0.1 1"/>

		<material name="duck_mat" rgba="1 1 0 1.0"/>

		<!-- <material name="flashlight_mat" rgba="1 0.65 0 1.0"/> -->

		<!-- Metal shelf and microscope -->
		<!-- scale: X(深度) Y(高度) Z(宽度)，当euler="1.5708 1.5708 0"时，Z方向变成实际宽度 -->
		<!-- 桌子Y宽度1.2m，调整scale第三个值控制宽度 -->
		<mesh name="metal_shelf_mesh" file="../metal_shelf_01/eb_metal_shelf_01.obj" scale="0.012 0.009 0.01"/>
		<material name="shelf_metal" rgba="0.7 0.7 0.75 1" specular="0.8"/>
		
		<mesh name="microscope_mesh" file="../microscope/microscope_textured.obj" scale="0.7 0.7 0.7"/>
		<mesh name="microscope_convex" file="../microscope/microscope_convex.obj" scale="0.7 0.7 0.7"/>
		<texture name="microscope_albedo" type="2d" file="../microscope/textures/Microscope_AlbedoTransparency.png"/>
		<material name="microscope_material" texture="microscope_albedo" texrepeat="1 1" specular="0.3" shininess="0.5"/>
		
		<mesh name="cell_dish_100-visual_visual" file="../container/cell_dish_100_vis/visual.obj" scale="0.0008 0.0008 0.002"/>
		<mesh name="cell_dish_convex" file="../container/cell_dish_100_vis/collision_convex.obj" scale="0.0008 0.0008 0.002"/>
		<material name="cell_dish_100-glass" rgba="1 1 1 0.5"/>
		
    </asset>

    <worldbody>
        <!-- <light pos="0 0 1.5" dir="0 0 -1" directional="true" /> -->
		<light pos="1.1 0.7 2.5" dir="0 0 -1" directional="true" />
		<geom name="floor" size="0 0 0.05" type="plane" material="groundplane" />
		<geom name="x-aixs" group="2" type="cylinder" contype="0" conaffinity="0"
			fromto="0 0 0 1 0 0" size="0.01" rgba="1 0 0 1" />
		<geom name="y-aixs" group="2" type="cylinder" contype="0" conaffinity="0"
			fromto="0 0 0 0 1 0" size="0.01" rgba="0 1 0 1" />
		<geom name="z-aixs" group="2" type="cylinder" contype="0" conaffinity="0"
			fromto="0 0 0 0 0 1" size="0.01" rgba="0 0 1 1" />

		<!-- 利用mujoco软件来调整Rendering->Camera -->
		<!-- 主相机：观察桌面 -->
		<camera name="cam" pos="0.85 0.8 1.6" xyaxes="0 -1 0 1 0 1" mode="fixed" />
		<!-- 侧向相机：观察货架 (位于货架正前方，平视货架各层) -->
		<camera name="cam_shelf" pos="2.5 0.8 1.5" xyaxes="0 1 0 -0.5 0 1" mode="fixed" />
		<camera name="cam_2" pos="0 0.230 0.9" xyaxes="-0.045 -0.999 0.000 -0.073 0.003 0.997"/>


		<!-- <camera name="cam" pos="0.85 0.8 1.45" euler="0 -1.05 -1.58" fovy="75" mode="fixed" /> -->
		<!-- <camera name="cam" pos="0.78 0.8 1.6" xyaxes="0 -1 0 1 0 2.0" mode="fixed" /> -->

		<body name="mocap" mocap="true" pos="1.3 0.3 0.74">
			<geom name="mocap" type="sphere" size="0.000001"/>
		</body>

		<!-- 以下物品暂时注释，需要时取消注释即可恢复 -->
		<!-- 
		<body name="Apple" pos="1.3 0.6 0.9" quat="0.7071 0.7071 0 0">
			<joint name="Apple_joint" type="free" damping="0.1"/>
			<geom name="Apple" type="mesh" mesh="Apple" material="apple_mat" />
		</body>

		<body name="Banana" pos="1.25 0.7 0.9" quat="0 1 0 0">
			<joint name="Banana_joint" type="free" damping="0.1"/>
			<geom name="Banana" type="mesh" mesh="Banana" material="banana_mat" />
		</body>
		-->

		<!-- <body name="Box" pos="1.35 0.8 0.9" quat="1 0 0 0">
			<joint name="Box" type="free" />
			<geom name="Box" type="box" size="0.025 0.025 0.025" rgba="1 0 1 1" condim="6"/>
		</body> -->

		<!-- <body name="T_block" pos="1.3 1.0 0.9" quat="1 0 0 0">
			<joint name="T_block" type="free" />
			<geom name="T_block_pt1" type="box" size="0.06 0.02 0.025" rgba="0 0.62 1 1" condim="6"/>
			<geom name="T_block_pt2" type="box" size="0.02 0.06 0.025" pos="0.08 0 0" rgba="0 0.62 1 1" condim="6"/>
		</body> -->

		<!--
		<body name="Hammer" pos="1.3 0.8 0.9" quat="0 0 1 0">
    		<joint name="Hammer_joint" type="free" damping="0.1"/>
    		<geom name="hammer_head_visual" type="mesh" mesh="hammer_head" material="hammer_head_mat" group="1"/>
    		<geom name="hammer_neck_visual" type="mesh" mesh="hammer_neck" material="hammer_neck_mat" group="1"/>
    		<geom name="hammer_contact0" type="mesh" mesh="hammer_contact0" condim="4" rgba="0 0 0 0" contype="1" conaffinity="1" group="0"/>
    		<geom name="hammer_contact1" type="mesh" mesh="hammer_contact1" condim="4" rgba="0 0 0 0" contype="1" conaffinity="1" group="0"/>
		</body>

		<body name="Knife" pos="1.45 0.8 0.9" euler="0 0 0">
    		<joint name="Knife_joint" type="free" damping="0.1"/>
    		<geom name="knife_blade_visual" type="mesh" mesh="knife_blade" material="knife_blade_mat" group="1"/>
    		<geom name="knife_handle_visual" type="mesh" mesh="knife_handle" material="knife_handle_mat" group="1"/>
    		<geom name="knife_contact0" type="mesh" mesh="knife_contact0" condim="4" rgba="0 0 0 0" contype="1" conaffinity="1" group="0"/>
    		<geom name="knife_contact1" type="mesh" mesh="knife_contact1" condim="4" rgba="0 0 0 0" contype="1" conaffinity="1" group="0"/>
		</body>
        -->
		<body name="Duck" pos="1.79 0.75 1.09" euler="0 0 2.2">
    		<joint name="Duck_joint" type="free" damping="0.1"/>
    		<geom name="duck_visual" type="mesh" mesh="duck" material="duck_mat" group="1"/>
    		<geom name="duck_contact0" type="mesh" mesh="duck_contact0" condim="4" rgba="0 0 0 0" contype="1" conaffinity="1" group="0"/>
    		<geom name="duck_contact1" type="mesh" mesh="duck_contact1" condim="4" rgba="0 0 0 0" contype="1" conaffinity="1" group="0"/>
    		<geom name="duck_contact2" type="mesh" mesh="duck_contact2" condim="4" rgba="0 0 0 0" contype="1" conaffinity="1" group="0"/>
		</body>

		<!-- Petri Dish - 放置在货架第4层 -->
		<!-- 货架碰撞层在 X=1.79, Y=0.6, 第4层Z=1.053+0.018(厚度)+0.02(培养皿偏移)≈1.09 -->
		<body name="cell_dish_100" pos="1.79 0.6 1.09">

		<!-- Petri Dish - 放置在桌子上面 -->
		<!-- <body name="cell_dish_100" pos="1.3 0.8 0.78"> -->

			<joint name="cell_dish_joint" type="free" damping="0.01" />
			<!-- 视觉层: group 1 -->
			<geom name="cell_dish_visual" type="mesh" mesh="cell_dish_100-visual_visual" material="cell_dish_100-glass" group="1" contype="0" conaffinity="0" pos="0 0 0.02"/>
			<!-- 碰撞层: 恢复为 Mesh 碰撞，通过 pos="0 0 0.02" 抵消 MuJoCo 的 AABB 自动居中效应 -->
			<geom name="cell_dish_col" type="mesh" mesh="cell_dish_convex" group="0" contype="1" conaffinity="1" rgba="0 1 0 0.1" 
				mass="0.1" friction="2 0.05 0.01" solref="0.002 1" solimp="0.95 0.99 0.001" margin="0.001" condim="4" pos="0 0 0.02"/>
		</body>


		<!-- <body name="Flashlight" pos="1.35 0.8 0.9" euler="0 0 0">
    		<joint name="Flashlight_joint" type="free" damping="0.1"/>
    		<geom name="flashlight_visual" type="mesh" mesh="flashlight" material="flashlight_mat" group="1"/>
    		<geom name="flashlight_contact0" type="mesh" mesh="flashlight_contact0" condim="4" rgba="0 0 0 0" contype="1" conaffinity="1" group="0"/>
    		<geom name="flashlight_contact1" type="mesh" mesh="flashlight_contact1" condim="4" rgba="0 0 0 0" contype="1" conaffinity="1" group="0"/>
		</body> -->

		<!--Zones-->
		<body name="zone_pickup" pos="1.4 0.6 0.73" quat="1 0 0 0">
			<geom name="zone_pickup" type="box" size="0.2 0.6 0.01" rgba="0 1 0 0.1" contype="0" conaffinity="0"/>
		</body>
		<body name="zone_drop" pos="0.2 0.2 0.73" quat="1 0 0 0">
			<geom name="zone_drop" type="box" size="0.2 0.2 0.01" rgba="1 0 0 0.1" contype="0" conaffinity="0"/>
		</body>

        <!--table -->
		<body name = "table1" euler="0 0 0" pos= "0.8 0 0.74" >
		  <geom name = "table1" type="mesh" mesh="table" group="2" rgba="0.35 0.35 0.35 1" mass="0" contype="0" conaffinity="0"/>
		</body>
		<body name = "table2" euler="0 0 0" pos= "1.6 0 0.74" >
		  <geom name = "table2" type="mesh" mesh="table" group="2" rgba="0.35 0.35 0.35 1" mass="0" contype="0" conaffinity="0"/>
		</body>

		<body name="simple_table" pos="0.8 0.6 0.69" quat="1 0 0 0">
			<geom name="simple_table" type="box" size="0.8 0.6 0.05" rgba="0.5 0.5 0.5 0.1" 
				solref="0.002 1" solimp="0.95 0.99 0.001"/>
		</body>

		<!-- Metal Shelf - 完全复制原始设置 -->
		<!-- 修改位置只需改 pos 的前两个值(X Y)，第三个值保持0 -->
		<body name="metal_shelf" pos="1.6 0.6 0" euler="1.5708 1.5708 0">
            <geom name="shelf_visual" type="mesh" mesh="metal_shelf_mesh" material="shelf_metal" contype="0" conaffinity="0" group="2"/>
        </body>
        
        <!-- Shelf collision - 偏移到架子开放面方向 -->
        <!-- 比例 0.9: Z坐标和厚度均乘以 0.9 -->
        <body name="shelf_collisions" pos="1.79 0.6 0" quat="1 0 0 0">
            <geom name="shelf_layer_1" type="box" size="0.18 0.6 0.018" pos="0 0 0.09" 
                  conaffinity="1" contype="1" condim="6" friction="2 0.5 0.001" rgba="0.5 0.5 0.5 0.2"/>
            <geom name="shelf_layer_2" type="box" size="0.18 0.6 0.018" pos="0 0 0.414"
                  conaffinity="1" contype="1" condim="6" friction="2 0.5 0.001" rgba="0.5 0.5 0.5 0.2"/>
            <geom name="shelf_layer_3" type="box" size="0.18 0.6 0.018" pos="0 0 0.738"
                  conaffinity="1" contype="1" condim="6" friction="2 0.5 0.001" rgba="0.5 0.5 0.5 0.2"/>
            <geom name="shelf_layer_4" type="box" size="0.18 0.6 0.018" pos="0 0 1.053"
                  conaffinity="1" contype="1" condim="6" friction="2 0.5 0.001" rgba="0.5 0.5 0.5 0.2"/>
            <geom name="shelf_layer_5" type="box" size="0.18 0.6 0.018" pos="0 0 1.377"
                  conaffinity="1" contype="1" condim="6" friction="2 0.5 0.001" rgba="0.5 0.5 0.5 0.2"/>
        </body>
        
        <!-- Microscope - 放在架子顶层 -->
        <body name="microscope" pos="0.2 0.5 0.74" euler="1.5708 -1.5708 0">
            <joint name="microscope_free" type="free" damping="1.0"/>
            <geom name="microscope_visual" type="mesh" mesh="microscope_mesh" material="microscope_material" contype="0" conaffinity="0" group="2"/>
            <geom name="microscope_col" type="mesh" mesh="microscope_convex"
                  contype="1" conaffinity="1" condim="6" friction="2 0.5 0.001" rgba="0 0 0 0"/>
        </body>
    </worldbody>

    <contact>
		<exclude body1="flange" body2="2f85_base" />
		<exclude body1="wrist_3_link" body2="2f85_base" />
		<exclude body1="wrist_2_link" body2="2f85_base" />
	</contact>

	<equality>
		<weld name="attach" body1="flange" body2="2f85_base" active="true" />
		<weld name="attach_mocap" body1="mocap" body2="ur5e_base" active="false" />
	</equality>

</mujoco>
